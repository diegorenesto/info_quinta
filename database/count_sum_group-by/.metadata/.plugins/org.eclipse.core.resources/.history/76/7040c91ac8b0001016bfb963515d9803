create table studenti(
id int auto_increment PRIMARY KEY,
cognome varchar(20),
nome varchar(20),
materia varchar(20),
voto int
);

insert into studenti(cognome, nome, materia, voto) values
("Renesto", "Diego", "Storia", 9),
("Pavarin", "Mattia", "Italiano", 7),
("Bazaj", "Francesco", "Inglese", 9),
("Zanforlin", "Nicolo'", "Motoria", 10),
("Pizzo", "Simone", "Moda", -1),
("Guezam", "Mohamed", "Informatica", 8),
("Prearo", "Enrico", "Storia", 6),
("Gaia", "Savogin", "Matematica", 5);

select *, avg(*)

select materia, avg(voto) as media_voto from studenti where nome = "Diego" && cognome = "Renesto"

select materia, avg(voto) as media_voto from studenti where nome = "Nicolo'" && cognome = "Zanforlin"